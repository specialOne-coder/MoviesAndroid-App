<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:paddingTop="20dp"
    app:cardElevation="5dp"
    tools:context=".Films.FilmAdapter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        android:id="@+id/container">

        <ImageView
            android:id="@+id/filmimagea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fondgris"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="4"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filmtitre"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Titre"/>

                <TextView
                    android:id="@+id/filmvote"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Vote"/>

            </LinearLayout>

            <TextView
                android:id="@+id/filmdescription"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:maxLines="5"
                android:text="Description" />

            <TextView
                android:id="@+id/filmsortie"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:gravity="end"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Date de sortie" />




        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>